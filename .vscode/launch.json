{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/zig-out/bin/kdblint.Debug.exe",
      "args": ["ast-check", "-t", "temp.q"],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "(lldb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceRoot}/dist/macos/aarch64/kdblint",
      "targetArchitecture": "arm64",
      "MIMode": "lldb"
    }
  ]
}
